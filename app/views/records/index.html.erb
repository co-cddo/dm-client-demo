<% content_for :title, "Records" %>

<h1 class="govuk-heading-l">Records</h1>

<div id="records">
  <% @records.each do |record| %>
    <%= render record %>
    <p class="govuk_body">
      <%= govuk_link_to "Show this record", record %>
    </p>
  <% end %>
</div>

<%= govuk_link_to "New record", new_record_path %>
